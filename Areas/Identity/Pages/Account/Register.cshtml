@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}



<style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(120deg, #f0f2f5, #e6e9f0);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        .wave-container {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            overflow: hidden;
            z-index: -1;
        }

        .wave {
            position: absolute;
            width: 200%;
            height: 200%;
            background: rgba(64, 169, 255, 0.05);
            border-radius: 40%;
        }

        .wave:nth-child(1) {
            animation: wave 20s infinite linear;
            opacity: 0.3;
            background: dodgerblue;
            color: gray;
        }

        .wave:nth-child(2) {
            animation: wave 15s infinite linear;
            opacity: 0.2;
            background: dodgerblue;
            color:;
        }

        .wave:nth-child(3) {
            animation: wave 10s infinite linear;
            opacity: 0.1;
            background: dodgerblue;
        }

        @@keyframes wave {
            0% {
                transform: translate(-50%, -50%) rotate(0deg);
            }
            100% {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        .login-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 2.5rem;
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(8px);
            width: 100%;
            max-width: 400px;
            margin: 1rem;
        }

        h2 {
            margin: 0 0 2rem;
            text-align: center;
            color: #333;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #555;
        }

        input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            outline: none;
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: #1a73e8;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .submit-btn {
            background: #1a73e8;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: background 0.3s;
        }

        .submit-btn:hover {
            background: #1557b0;
        }

        .cancel-btn {
            background: transparent;
            color: #1a73e8;
            border: 1px solid #1a73e8;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s;
        }

        .cancel-btn:hover {
            background: rgba(26, 115, 232, 0.1);
        }

        .forgot-password {
            display: block;
            text-align: center;
            margin-top: 1rem;
            color: #1a73e8;
            text-decoration: none;
        }

        .forgot-password:hover {
            text-decoration: underline;
        }
    </style>
    <div class="wave-container">
        <div class="wave"></div>
        <div class="wave"></div>
        <div class="wave"></div>
    </div>

    <div class="login-container">
        <h2>Create New Account</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input asp-for="Input.FirstName" id="firstName" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input asp-for="Input.LastName" id="lastName" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="Input.Email" type="email" id="email" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input asp-for="Input.PhoneNumber" id="phoneNumber" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input asp-for="Input.Address" id="address" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Input.Password" type="password" id="password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" id="confirmPassword" required>
            </div>
            <div class="button-group">
                <button type="submit" class="submit-btn">Submit</button>
                <a class="cancel-btn" href="/Index">Cancel</a>
            </div>
        </form>
    </div>





